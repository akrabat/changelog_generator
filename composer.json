 {
    "name": "akrabat/changelog-generator",
    "description": "Generate Markdown changelogs from your GitHub milestones",
    "type": "library",
    "keywords": [
      "github",
      "changelog"
    ],
    "license": "BSD-2-Clause",
    "authors": [
      {
        "name": "Matthew Weier O'Phinney",
        "email": "matthew@weierophinney.net",
        "homepage": "http://mwop.net",
        "role": "Developer"
      },
      {
        "name": "Rob Allen",
        "email": "rob@akrabat.com",
        "homepage": "http://akrabat.com",
        "role": "Developer"
      }
    ],
    "bin": [
        "changelog_generator.php"
    ],
    "config": {
     "optimize-autoloader": true
    },
    "require": {
      "php": "^7.3 || ^8.0",
      "ext-curl": "*",
      "ext-json": "*"
    },
    "autoload": {
      "psr-4": {
        "App\\": "src"
      }
    },
    "replace": {
      "phly/changelog-generator": "2.*"
    }
 }
